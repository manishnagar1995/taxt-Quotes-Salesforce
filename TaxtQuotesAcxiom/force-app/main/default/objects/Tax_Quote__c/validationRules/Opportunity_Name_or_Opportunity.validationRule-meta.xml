<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Opportunity_Name_or_Opportunity</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 (ISBLANK( Opportunity_Name__c ) ), 
 (ISBLANK( Opportunity__c ) )
)</errorConditionFormula>
    <errorMessage>Opportunity or Opportunity Name should be filled</errorMessage>
</ValidationRule>
